<h2><%= @list.name %></h2>
<%= link_to "Create a bookmark", new_list_bookmark_path(@list) %>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %>, movie: <%= bookmark.movie.title %>
    <%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %></li>

  <% end %>
</ul>
<br>
<%= link_to "Check All Movies List", lists_path %>
